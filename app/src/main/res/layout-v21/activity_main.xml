<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abdellah.portfolioapp.MainActivity"
    style="@android:style/Theme.Material.Light"
    android:theme="@style/AppTheme"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:text="My Nanodegree Apps !"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="50dp"
            android:textSize="24sp"
            android:layout_marginBottom="47dp" />

        <Button
            style="@style/MyButtonTheme"
            android:text="Popular Movies"
            android:id="@+id/button1"
            />

        <Button
            style="@style/MyButtonTheme"
            android:text="Stock Hawk"
             android:id="@+id/button2"
          />

        <Button
            style="@style/MyButtonTheme"
            android:text="Build it Bigger "
             android:id="@+id/button3"
            />

        <Button
            style="@style/MyButtonTheme"
            android:text="Make Your App Material "
             android:id="@+id/button4"
            />

        <Button
            style="@style/MyButtonTheme"
            android:text="Go Ubiquitous "
            android:id="@+id/button5"
            />

        <Button
            style="@style/MyButtonTheme"
            android:text="Capstone "
          android:id="@+id/button6"
            />

    </LinearLayout>

